pipeline {
    agent any

    stages {
        stage('Preconditions') {
            steps {
                echo 'Executing Preconditions....'
                echo "RESULT***: ${currentBuild.result}"
            }
            post {
                 always {
                    steps {
                     echo 'always 1'
                     step {
                      result: 'FAILURE'
                     }
                     }
                 }
                 success {
                    echo 'success 1'
                 }
                 failure {
                    echo 'failure 1'
                 }
                 unstable {
                    echo 'unstable 1'
                 }
                 changed {
                    echo 'changed 1'
                 }
             }
         }


        stage('Phase 2 - Prize Processing') {
            steps {
              echo 'Executing Prize processing....'
            }
            post {
                 always {
                     echo 'always 2'
                 }
                 success {
                    echo 'success 2'
                 }
                 failure {
                      echo 'failure 2'
                 }
                 unstable {
                        echo 'unstable 2'
                 }
                 changed {
                        echo 'changed 2'
                 }
             }
         }
        }

   post {
        always {

          echo "RESULT: ${currentBuild.result}"
        }
        success {
              echo 'success 3'
        }
        failure {
            echo 'failure 3'
        }
        unstable {
              echo 'unstable 3'
        }
        changed {
              echo 'changed 3'
        }
    }
}
